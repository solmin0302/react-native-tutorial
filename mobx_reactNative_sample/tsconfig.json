{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    },
    "target": "es6",
    "experimentalDecorators": true
  },
  "exclude": [
    "jest.config.js",
    "metro.config.js",
    "babel.config.js",
    "node_modules"
  ]
}
